{
  "name": "restman",
  "version": "0.0.1",
  "private": true,
  "description": "A powerful REST API client TUI built with Bun",
  "license": "MIT",
  "author": "cadamsdev",
  "module": "index.tsx",
  "type": "module",
  "bin": {
    "restman-v2": "./index.tsx"
  },
  "scripts": {
    "dev": "bun run ./index.tsx",
    "start": "bun run ./index.tsx",
    "changeset": "changeset",
    "build:linux-x64": "bun run scripts/build-target.ts linux-x64",
    "build:linux-arm64": "bun run scripts/build-target.ts linux-arm64",
    "build:windows-x64": "bun run scripts/build-target.ts windows-x64",
    "build:darwin-arm64": "bun run scripts/build-target.ts darwin-arm64",
    "build:darwin-x64": "bun run scripts/build-target.ts darwin-x64",
    "build": "bun build src/cli.ts --compile --outfile dist/restman",
    "fmt": "oxfmt",
    "fmt:check": "oxfmt --check",
    "lint": "oxlint --type-aware --type-check",
    "lint:fix": "oxlint --fix"
  },
  "dependencies": {
    "@opentui/core": "^0.1.72",
    "@opentui/react": "^0.1.72",
    "react": "^19.2.3"
  },
  "devDependencies": {
    "@lazy-release/changesets": "^0.5.1",
    "@types/archiver": "^7.0.0",
    "@types/bun": "latest",
    "@types/react": "^19.2.8",
    "archiver": "^7.0.1",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "oxlint-tsgolint": "^0.11.1",
    "react-devtools-core": "^7.0.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
